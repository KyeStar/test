bot.registerCommand('search', (msg, args) => {
  var pesquisar = args.join(' ');

 if(!pesquisar) return  msg.addReaction('ðŸ¤”');

  Google(pesquisar, function (err, res){
    if(err) return  msg.addReaction('ðŸ¤”') && console.error(err.stack)

    for (var i = 0; i < 1; ++i) {
           var link = res.links[i];
           Google.Lang = 'pt-BR'
           Google.Tld = 'pt-BR'
           Google.NextText = 'Weiter'
           console.log(link.title + ' - ' + link.href)
           console.log(link.description + "\n")
           msg.channel.createMessage({embed:{ author: { name: "Aqui estÃ¡ a pesquisa sobre: "+ link.title}}}).then(msg => setTimeout(function(){msg.delete();}, 75000));
           msg.channel.createMessage(link.href);
     }
  })
}, {
  usage: '[alguma pergunta ou palavra chave]',
  description: 'vai pesquisar no google'
})

