bot.registerCommand('say', (msg, args)=>{
  var say     = args.join(' '),
      message = '';

  if(!say) return msg.addReaction('ðŸ¤”')

 switch (RandomNumber(6)) {
   case 1:
    message =  `__${say}__`
    break;

  case 2:
    message =  `~~${say}~~`
    break;

  case 3:
    message =  `**${say}**`
    break;

  case 4:
    message =  `\`${say}\``
    break;

  default:
  message =  `${say.split('').join(' ')}`
 }
 return message
}, {
usage: '[mensagem]',
description: 'faÃ§a o bot dizer algo!',
deleteCommand: true
})
//==============================================================================
bot.registerCommand('rd', (msg, args) => {
  var rd = parseInt(args.join(' '));

  if(!rd)  return msg.addReaction('ðŸ¤”')

  return `${RandomNumber(rd)}`
}, {
  usage: '[Numero]',
  description: 'darÃ¡ um numero aleatÃ³rio entre 0 e o numero que vocÃª escolheu'
})

