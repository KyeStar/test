bot.registerCommand('clear', (msg, args) => {
   var args = parseInt(args.join(' '));

   if(!args){
     return  msg.addReaction('ðŸ¤”')
   }else if(args > 1500){
     return "O max de clear Ã© 1500 mensagens ðŸ˜•"
   }else{
     msg.channel.purge(args)
     msg.channel.createMessage(`Deletado ${args} mensagem!`)
   }

}, {
  usage: '[numero de 1-99]',
  description:' deleta um numero de msgs de acordo com oque vocÃª pede (precisa da permissÃ£o de deletar mensagens/gerenciar canal)',
  requirements: {
    permissions: {'manageMessages': true}
  }
})

